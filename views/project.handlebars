<section class="bg-white text-dark pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>{{name}}</h1>
                <p>{{dueDate}}</p>
                <a href="/taskCreatenew" class="btn btn-primary">Add Task</a>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Completed</th>
                            <th scope="col">Shortname</th>
                            <th scope="col">Due</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Tasks}}
                            <tr>
                                <td><input type="checkbox" id="task-{{id}}" disabled {{#if completed}}checked{{/if}}></td>
                                <td><a href="/tasks/{{id}}">{{shortname}}</a></td>
                                <td>{{dueDate}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
