<section class="pt-5 pb-5 bg-dark">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-5 text-center">
                <div class="card">
                    <div class="card-body">
                        <h1 class="display-5">Register</h1>
                        <div class="row">
                            <div class="col mt-4">
                                <input type="text" id="regName" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <input type="text" id="regEmail" class="form-control" placeholder="Email">
                                <span class="helper-text" data-error="wrong" data-success="right"></span>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <input type="password" id="regPassword" class="form-control mb-1" placeholder="Password">
                                <span class="helper-text" data-error="wrong" data-success="right"></span>
                                <p class="text-right mt-4 small ">
                                    <a href="/login">Already have an account?</a>
                                </p>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                                <a id="regSubmitBtn"class="btn btn-primary btn-lg btn-round" type="button">Submit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-auth.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>
<script src="js/login.js" type="text/javascript"></script>





